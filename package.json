{
  "private": true,
  "workspaces": [
    "addon",
    "test-app"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ember-cli/ember-resolver.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build --workspace addon",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:tests": "npm start --workspace test-app",
    "start:addon": "npm start --workspace addon -- --no-watch.clearScreen",
    "test": "npm test --workspace test-app",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "5.0.0",
    "@release-it-plugins/workspaces": "^3.2.0",
    "concurrently": "^7.2.1",
    "prettier": "^2.8.1",
    "release-it": "^15.5.1"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/workspaces": true,
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "npm": false,
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "node": "14.19.3",
    "npm": "8.12.1"
  },
  "version": "9.0.1"
}
